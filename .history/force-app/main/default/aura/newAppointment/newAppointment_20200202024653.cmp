<aura:component
  implements="flexipage:availableForRecordHome,lightning:actionOverride,force:lightningQuickAction,force:appHostable,flexipage:availableForRecordHome"
  access="global"
  controller="Appointment"
>
  <aura:attribute name="isModalOpen" type="boolean" default="false" />

  <aura:attribute name="specialistOptions" type="List" access="PRIVATE" />
  <aura:attribute name="specialist" type="String" access="PRIVATE" />
  <aura:attribute name="visit" type="Visit__c" access="PRIVATE" />

  <aura:handler name="init" value="{!this}" action="{!c.init}" />

      <section
        role="dialog"
        tabindex="-1"
        aria-labelledby="modal-heading-01"
        aria-modal="true"
        aria-describedby="modal-content-id-1"
        class="slds-modal slds-fade-in-open"
      >
        <div class="">
          <!-- Modal/Popup Box Header Starts here-->
          <header class="slds-modal__header">
            <lightning:buttonIcon
              iconName="utility:close"
              onclick="{! c.closeModel }"
              alternativeText="close"
              variant="bare-inverse"
              class="slds-modal__close"
            />
            <h2
              id="modal-heading-01"
              class="slds-text-heading_medium slds-hyphenate"
              >Schedule Appointment</h2
            >
          </header>
          <!--Modal/Popup Box Body Starts here-->
          <div
            class="slds-modal__content slds-p-around_medium"
            id="modal-content-id-1"
          >
            <lightning:select
              name="specialist"
              label="Speciality:"
              aura:id="specialist"
              value="{!v.specialist}"
            >
              <aura:iteration items="{!v.specialistOptions}" var="option">
                <option
                  text="{!option.label}"
                  value="{!option.name}"
                  selected="{!option.selected}"
                />
              </aura:iteration>
            </lightning:select>

           <!-- <div onkeyup="{! c.doctorKeyUp }">
              <lightning:input
                aura:id="doctor"
                name="doctor"
                label="Find Doctor"
                type="search"
              />
            </div>
            <div onkeyup="{! c.hospitalKeyUp }">
              <lightning:input
                aura:id="hospital"
                name="hospital"
                label="Find Hospital"
                type="search"
              />  
            </div> -->
            <lightning:input name="purpose" label="Purpose" value="" />
            <c:LookupContainer/>
            <c:Picker aura:id='picker'/>
          </div>
          <!--Modal/Popup Box Footer Starts here-->
          <footer class="modal-footer slds-modal__footer attach-to-bottom">
            <lightning:button
              variant="neutral"
              label="Cancel"
              title="Cancel"
              onclick="{! c.closeModel }"
            />
            <lightning:button
              variant="brand"
              aura:id="checkSlots"
              label="Check Slots"
              title="Check Slots"
              onclick="{!c.checkSlots}"
            />
            <lightning:button
              variant="brand"
              aura:id="createAppointment"
              label="Create Appointment"
              title="Create Appointment"
              onclick="{!c.createAppointment}"
            />
          </footer>
        </div>
      </section>
      <aura:html tag="style">
        .cuf-content {
            padding: 0 0rem !important;
        }
        .slds-p-around--medium {
            padding: 0rem !important;
        }       
        .slds-modal__content{
            overflow-y:hidden !important;
            height:unset !important;
            max-height:unset !important;
        }
    </aura:html>
</aura:component>